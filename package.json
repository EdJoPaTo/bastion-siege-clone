{
	"name": "bastion-siege-clone",
	"private": true,
	"version": "1.0.0",
	"license": "MIT",
	"repository": "EdJoPaTo/bastion-siege-clone",
	"author": {
		"name": "Edgar Toll",
		"email": "EdJoPaTo@gmail.com",
		"url": "EdJoPaTo.de"
	},
	"engines": {
		"node": ">=11"
	},
	"scripts": {
		"build": "del dist && tsc",
		"prepack": "npm run build",
		"start": "ts-node source/index.ts",
		"test": "xo && nyc ava"
	},
	"config": {
		"tokenpath": "/run/secrets/bastion-siege-clone-token.txt"
	},
	"main": "dist",
	"types": "dist",
	"files": [
		"dist",
		"!*.test.*"
	],
	"dependencies": {
		"@sindresorhus/tsconfig": "^0.3.0",
		"@types/js-yaml": "^3.12.0",
		"bastion-siege-logic": "^1.2.0",
		"js-yaml": "^3.13.0",
		"telegraf": "^3.28.0",
		"telegraf-i18n": "^6.5.0",
		"telegraf-inline-menu": "^3.5.1",
		"telegraf-session-local": "0.0.6",
		"ts-node": "^8.0.3",
		"typescript": "^3.4.1",
		"wikidata-sdk": "^6.1.0",
		"wikidata-sdk-got": "^1.0.1"
	},
	"devDependencies": {
		"@types/node": "^11.12.2",
		"@typescript-eslint/eslint-plugin": "^1.3.0",
		"ava": "^1.2.1",
		"del-cli": "^1.1.0",
		"eslint-config-xo-typescript": "^0.9.0",
		"nyc": "^13.3.0",
		"xo": "^0.24.0"
	},
	"ava": {
		"babel": false,
		"compileEnhancements": false,
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register"
		]
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"include": [
			"source"
		],
		"exclude": [
			"**/*.test.ts"
		],
		"all": true,
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"extends": "xo-typescript",
		"semicolon": false,
		"extensions": [
			"ts"
		],
		"rules": {
			"import/named": "warn",
			"@typescript-eslint/promise-function-async": "off",
			"ava/no-ignored-test-files": "off"
		}
	}
}
